{
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "target": "esnext",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "webpack-env",
            "src/types"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
